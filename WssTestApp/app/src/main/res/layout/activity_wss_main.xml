<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WssMainActivity">


    <TableLayout android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_width="wrap_content"
        android:background="#26ad8f"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:background="#6c57ff">

            <TextView android:text="Secure Web Socket   " android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:id="@+id/heading"
                android:textColor="@android:color/white"
                android:textSize="28dp"
                android:layout_column="0"
                android:textStyle="bold"
                android:theme="@android:style/Animation"
                android:layout_span="3"
                android:background="#26ad8f"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

        <TableRow android:layout_height="wrap_content"
            android:layout_width="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Team 1"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textColor="@android:color/white"
                android:width="50dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Team 2"
                android:id="@+id/textView2"
                android:layout_column="2"
                android:textColor="@android:color/white"
                android:width="50dp" />

        </TableRow>


        <TableRow android:layout_height="wrap_content"
            android:layout_width="0dp">

            <EditText android:layout_column="0"
                android:layout_height="40dp"
                android:layout_width="0dp"
                android:id="@+id/sendEditText"
                android:width="50dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Vs"
                android:id="@+id/textView3"
                android:layout_column="1"
                android:textColor="@android:color/white"
                android:width="50dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText android:layout_column="2"
                android:layout_height="40dp"
                android:layout_width="100dp"
                android:id="@+id/sendEditText2"
                android:width="50dp" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <Button android:layout_column="0"
                android:layout_height="40dp"
                android:layout_width="80dp"
                android:id="@+id/sendButton"
                android:text="Send"
                android:onClick="sendTextWSS"
                android:width="50dp"
                android:layout_span="3"
                android:textSize="18dp"
                android:enabled="true" />
        </TableRow>

        <TableRow android:layout_height="30dp"
            android:layout_width="100dp" >
            <TextView />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView android:layout_column="0"
                android:layout_height="40dp"
                android:layout_width="80dp"
                android:text="Received Data :- "
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:width="50dp"
                android:textSize="17dp" />

            <TextView android:layout_column="1"
                android:layout_height="40dp"
                android:layout_width="80dp"
                android:text="####"
                android:id="@+id/receiveEditText"
                android:textStyle="bold"
                android:textColor="#26ad8f"
                android:width="50dp"
                android:layout_span="2"
                android:textSize="17dp"
                android:background="#ebedf0"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Status:-"
                android:id="@+id/textView4"
                android:layout_column="0"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="#Status#"
                android:id="@+id/statusTextView"
                android:layout_column="1"
                android:layout_span="2"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="#Error Details#"
                android:id="@+id/errorDetailsTextView"
                android:layout_column="1"
                android:layout_span="2"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
